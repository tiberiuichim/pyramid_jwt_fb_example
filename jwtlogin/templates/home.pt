<div metal:use-macro="master">
  <div metal:fill-slot="content">

    <div class="content">
      <div id="status">
      </div>

      <div id="check_jwt">
        <h1>FB+JWT Login demo</h1>
        <form method="POST" action="/check_token">
          <div class="form-group">
            <label for="jwt_token">JWT Token: </label>
            <textarea class="form-control" cols=60 rows=5 name="jwt_token">
            </textarea>
            <input class="btn btn-primary" type="submit" name="submit" value="Show token content" />
            <button class="btn btn-secondary" id="restricted" disabled="disabled">Retrieve restricted page</button>
          </div>
        </form>
      </div>
      <div id="protected">
      </div>
    </div>

  </div>
</div>
